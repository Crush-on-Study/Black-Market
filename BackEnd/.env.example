# Database Configuration
DATABASE_URL=postgresql://blackmarket_user:blackmarket_password@db:5432/blackmarket

# For local development (without Docker)
# DATABASE_URL=postgresql://blackmarket_user:blackmarket_password@localhost:5432/blackmarket

# For SQLite (development only)
# DATABASE_URL=sqlite:///./blackmarket.db

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database Credentials (for Docker)
POSTGRES_DB=blackmarket
POSTGRES_USER=blackmarket_user
POSTGRES_PASSWORD=blackmarket_password

# pgAdmin Configuration
PGADMIN_DEFAULT_EMAIL=admin@blackmarket.com
PGADMIN_DEFAULT_PASSWORD=admin123

# Email Configuration (SMTP)
# Gmail 사용 시: SMTP_SERVER=smtp.gmail.com, SMTP_PORT=587
# 앱 비밀번호 생성 필요: https://support.google.com/accounts/answer/185833
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=your-email@gmail.com